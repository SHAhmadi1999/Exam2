<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/img_contact"
        app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person"
        android:background="@drawable/shape_contact"
        android:backgroundTint="@color/colorPrimaryVariant"
        android:padding="@dimen/xsmall"
        />

    <TextView
        android:id="@+id/tv_nameContact"
        style="?attr/textAppearanceHeadline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/xxsmall"
        android:text="Aashif"
        android:textColor="@color/colorOnBackground"
        app:layout_constraintStart_toEndOf="@id/img_contact"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_numberContact"
        style="?attr/textAppearanceHeadline6"
        app:layout_constraintStart_toStartOf="@id/tv_nameContact"
        app:layout_constraintTop_toBottomOf="@id/tv_nameContact"
        android:layout_marginTop="@dimen/xxsmall"
        android:text="9842012345"
        android:textColor="@color/colorOnBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>