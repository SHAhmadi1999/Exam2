<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_onBoarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/artwork"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_OnBoarding"
        style="@style/titleH1OnBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/XXlarge"
        android:lineSpacingExtra="@dimen/xsmall"
        android:text="@string/title_onBoarding"
        app:layout_constraintStart_toStartOf="@id/img_onBoarding"
        app:layout_constraintEnd_toEndOf="@id/img_onBoarding"
        app:layout_constraintTop_toTopOf="@id/img_onBoarding" />

    <TextView
        android:id="@+id/intro_OnBoarding"
        style="@style/subtitleOnBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xsmall"
        android:text="@string/intro_onBoarding"
        app:layout_constraintStart_toStartOf="@id/img_onBoarding"
        app:layout_constraintEnd_toEndOf="@id/img_onBoarding"
        app:layout_constraintTop_toBottomOf="@id/title_OnBoarding" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_getStart"
        android:layout_marginEnd="@dimen/large"
        android:layout_marginStart="@dimen/large"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/XXlarge" />


</androidx.constraintlayout.widget.ConstraintLayout>